<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signUpBack"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.somoplay.drawingfun.SignUpActivity">

    <EditText
        android:id="@+id/usernameField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:textColor="#000000"
        android:background="@drawable/rounded"
        android:hint="@string/username_hint"
        android:text="qwer1"
        >
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/firstNameField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:paddingLeft="12dp"
        android:textColor="#000000"
        android:background="@drawable/rounded"
        android:layout_below="@+id/usernameField"
        android:layout_alignLeft="@id/usernameField"
        android:hint="First Name"/>

    <EditText
        android:id="@+id/lastNameField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:ems="10"
        android:textColor="#000000"
        android:background="@drawable/rounded"
        android:layout_below="@+id/firstNameField"
        android:layout_alignLeft="@id/firstNameField"
        android:hint="Last Name"/>

    <EditText
        android:id="@+id/emailField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textColor="#000000"
        android:background="@drawable/rounded"
        android:layout_below="@+id/lastNameField"
        android:layout_alignLeft="@id/lastNameField"
        android:hint="Email Address"
        android:text="qwer1@qwe.com"
        />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="#000000"
        android:background="@drawable/rounded"
        android:layout_below="@+id/emailField"
        android:layout_alignLeft="@id/emailField"
        android:hint="@string/password_hint"
        android:text="11111"
        />

    <EditText
        android:id="@+id/newPasswordField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="#000000"
        android:background="@drawable/rounded"
        android:layout_below="@+id/passwordField"
        android:layout_alignLeft="@id/passwordField"
        android:hint="Retype Password"
        android:text="11111"
        />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="@string/sign_up_button_label"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/newPasswordField"/>

</RelativeLayout>
